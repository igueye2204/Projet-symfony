{% extends 'base.html.twig' %}

{% block body %}

    <div method="POST" action="" class="form container studentregister">
        {{ form_start(formEtudiant) }}
            <div class="row">
                <div class="form-group col-md-6 champ">
                    <input type="hidden" id="matricule"  value="{{ nbrField }}">
                    {{ form_row(formEtudiant.matricule, { 'attr': { 'placeholder': 'matricule' }}) }}
                </div>
                <div class="form-group col-md-6 champ">
                    {{ form_row(formEtudiant.prenom, { 'attr': { 'placeholder': 'prenom' }}) }}
                </div>
                <div class="form-group col-md-6 champ">
                    {{ form_row(formEtudiant.nom, { 'attr': { 'placeholder': 'nom' }}) }}
                </div>
                <div class="form-group col-md-6 champ">
                    {{ form_row(formEtudiant.datenaissance) }}
                </div>
                <div class="form-group col-md-6 champ">
                    {{ form_row(formEtudiant.email, { 'attr': { 'placeholder': 'email' }}) }}
                </div>
                <div class="form-group col-md-6 champ">
                    {{ form_row(formEtudiant.tel, { 'attr': { 'placeholder': 'tel' }}) }}
                </div>
                <div class="form-group col-md-6 champ">
                    {{ form_row(formEtudiant.typeetudiant) }}
                    <button id="addInput" class="btn-generate" type="button"><span class="iconify btn-select" data-icon="ant-design:plus-square-filled" data-inline="false"></span></button>
                </div>
                <div class="form-group col-md-6 champ" id="zone-affichage">
                    {{ form_row(formEtudiant.adresse, { 'attr': { 'placeholder': 'adresse'}}) }}
                    {{ form_row(formEtudiant.chambre, { 'attr': { 'placeholder': 'numchambre', 'class': 'add'}}) }}
                </div>
                <div class="form-group col-md-6 champ">
                    {{ form_row(formEtudiant.departement) }}
                </div>
                <div class="form-group col-md-6 champ">
                    <button type="submit" name="btn_enregitrerEtudiant" id="enregistrer" class="btn register">Enregistrer</button>
                </div>
            </div>
        {{ form_end(formEtudiant) }}
            

